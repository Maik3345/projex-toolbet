{
  "compilerOptions": {
    "sourceMap": true,
    "types": ["node"],
    "declaration": true,
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "resolveJsonModule": true,
    "target": "es2022",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".", // Esto permite que los módulos se resuelvan relativamente a la raíz del proyecto
    "paths": {
      "@shared": ["./src/shared/index"],
      "@api": ["./src/api/index"],
      "@modules": ["./src/modules/index"],
      "@commands": ["./src/commands/index"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["vitest.config.ts", "**/*.test.ts", "**/*.spec.ts"]
}
